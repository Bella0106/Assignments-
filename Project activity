-------Task number 1--------

#include <iostream>
#include <vector>
#include <string>
#include <set>

using namespace std;

struct Player {
    string first_name;
    string last_name;
    string team;
};

//  to find the  players who play the both sports
vector<string> findCommonPlayers(const vector<Player>& basketball,
                                 const vector<Player>& football) {
    set<string> names;         // store names from basketball
    vector<string> common;     // store names in both

    // Put all basketball player full names in a set
    for (const auto& p : basketball) {
        string fullName = p.first_name + " " + p.last_name;
        names.insert(fullName);
    }

    // Check football players
    for (const auto& p : football) {
        string fullName = p.first_name + " " + p.last_name;

        // If name already in set â†’ they play both
        if (names.count(fullName)) {
            common.push_back(fullName);
        }
    }

    return common;
}

int main() {
    vector<Player> basketball = {
        {"Jill", "Huang", "Gators"},
        {"Janko", "Barton", "Sharks"},
        {"Wanda", "Vakulskas", "Sharks"},
        {"Jill", "Moloney", "Gators"},
        {"Luuk", "Watkins", "Gators"}
    };

    vector<Player> football = {
        {"Hanzla", "Radosti", "32ers"},
        {"Tina", "Watkins", "Barleycorns"},
        {"Alex", "Patel", "32ers"},
        {"Jill", "Huang", "Barleycorns"},
        {"Wanda", "Vakulskas", "Barleycorns"}
    };

    vector<string> result = findCommonPlayers(basketball, football);

    for (const string& name : result) {
        cout << name << endl;
    }

    return 0;
}
--------Task number 2-------

#include <iostream>
#include <vector>
using namespace std;

int findMissingNumber(const vector<int>& arr, int N) {
    int expectedSum = N * (N + 1) / 2; // sum if no number was missing
    int actualSum = 0;

    for (int num : arr) {
        actualSum += num;
    }

    return expectedSum - actualSum; // missing number
}

int main() {

    vector<int> arr = {0, 1, 2, 3, 4, 5, 6, 7, 9, 10};

    int N = 10; // maximum number

    cout << "Missing number: " << findMissingNumber(arr, N) << endl;

    return 0;
}

-----Task number 3---- 

#include <iostream>
#include <vector>
using namespace std;

int maxProfit(const vector<int>& prices) {
    if (prices.empty()) return 0;

    int lowestPrice = prices[0];   // best price to buy
    int bestProfit = 0;            // maximum profit

    for (int i = 1; i < prices.size(); i++) {
        int currentProfit = prices[i] - lowestPrice;

        if (currentProfit > bestProfit) {
            bestProfit = currentProfit;
        }

        if (prices[i] < lowestPrice) {
            lowestPrice = prices[i];
        }
    }

    return bestProfit;
}

int main() {
    vector<int> prices = {9, 4, 6, 3, 8, 5, 10};
    cout << "Maximum Profit: " << maxProfit(prices) << endl;
    return 0;
}

------Task number 4--------

#include <iostream>
#include <vector>
#include <climits>
using namespace std;

int highestProductOfTwo(const vector<int>& nums) {
    int max1 = INT_MIN, max2 = INT_MIN;
    int min1 = INT_MAX, min2 = INT_MAX;

    for (int num : nums) {
        // update largest numbers
        if (num > max1) {
            max2 = max1;
            max1 = num;
        } else if (num > max2) {
            max2 = num;
        }

        // update smallest numbers
        if (num < min1) {
            min2 = min1;
            min1 = num;
        } else if (num < min2) {
            min2 = num;
        }
    }

    return max(max1 * max2, min1 * min2);
}

int main() {
    vector<int> arr = {5, -10, -6, 9, 4};
    cout << highestProductOfTwo(arr);
    return 0;
}

// max1 = 9 
//max2= 5 
//min1= -10
//min2 = -6 
// product = 9 * 5 = 45
//-10 * -6 = 60
// So the asnwer is 60 


--- Task number 5------


#include <iostream>
#include <vector>
using namespace std;

void sortTemperatures(vector<double>& temps) {
    vector<int> count(21, 0);

    // Count each temperature
    for (double temp : temps) {
        int index = (int)(temp * 10) - 970; //
        count[index]++;
    }

    // Put temperatures back in sorted order
    int i = 0;
    for (int j = 0; j < 21; j++) {
        while (count[j] > 0) {
            temps[i] = (j + 970) / 10.0; // for example index1-> 1+970 = 971/1-.0=97.0 covert index back to temperature
            i++;
            count[j]--;
        }
    }
}

int main() {
    vector<double> temps = {
        98.6, 98.0, 97.1, 99.0, 98.9,
        97.8, 98.5, 98.2, 98.0, 97.1
    };

    sortTemperatures(temps);

    for (double t : temps) {
        cout << t << " ";
    }

    return 0;
}

---- Task number 6 ----

#include <iostream>
#include <vector>
#include <unordered_set>
using namespace std;

int longestConsecutiveSequence(const vector<int>& nums) {
    unordered_set<int> numSet(nums.begin(), nums.end());
    int maxLength = 0;

    for (int num : nums) {
        // Only start counting if num-1 is not in set
        if (numSet.find(num - 1) == numSet.end()) {
            int currentNum = num;
            int length = 1;

            // Count consecutive numbers
            while (numSet.find(currentNum + 1) != numSet.end()) {
                currentNum++;
                length++;
            }

            if (length > maxLength) {
                maxLength = length;
            }
        }
    }

    return maxLength;
}

int main() {
    vector<int> arr1 = {10, 5, 12, 3, 55, 30, 4, 11, 2};
    cout << "Longest consecutive sequence length: " << longestConsecutiveSequence(arr1) << endl;

    vector<int> arr2 = {19, 13, 15, 12, 18, 14, 17, 11};
    cout << "Longest consecutive sequence length: " << longestConsecutiveSequence(arr2) << endl;

    return 0;
}

